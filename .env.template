# EchoTales Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/echotales
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AI/ML API KEYS
# =============================================================================

# OpenAI API (for ChatGPT, DALL-E, Whisper)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (for image generation and character enhancement)
GEMINI_API_KEY=AIzaSyD23o0K1sI4lghuNJhnEnUMu_B-jaUf9i4

# Stability AI API (for Stable Diffusion)
STABILITY_API_KEY=your_stability_api_key_here

# HuggingFace API (for models and inference)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# ElevenLabs API (for premium TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =============================================================================
# IMAGE GENERATION SETTINGS
# =============================================================================
IMAGE_GENERATION_ENABLED=True
IMAGE_CACHE_DIR=data/output/images
MAX_IMAGE_SIZE=1024x1024
DEFAULT_IMAGE_STYLE=cinematic

# Provider priorities (1=highest, 4=lowest)
GEMINI_PRIORITY=1
HUGGINGFACE_PRIORITY=2
OPENAI_PRIORITY=3
STABILITY_PRIORITY=4

# Rate limiting (requests per minute)
GEMINI_RATE_LIMIT=10
OPENAI_RATE_LIMIT=5
STABILITY_RATE_LIMIT=3
HUGGINGFACE_RATE_LIMIT=20

# =============================================================================
# VOICE/AUDIO SETTINGS
# =============================================================================
VOICE_GENERATION_ENABLED=True
VOICE_CACHE_DIR=data/output/audio
DEFAULT_VOICE_ENGINE=openvoice
AUDIO_SAMPLE_RATE=22050
AUDIO_FORMAT=wav

# Voice dataset paths
MALE_VOICES_PATH=data/voice_dataset/male_actors
FEMALE_VOICES_PATH=data/voice_dataset/female_actors

# =============================================================================
# TEXT PROCESSING SETTINGS
# =============================================================================
BOOKNLP_ENABLED=True
BOOKNLP_MODEL_PATH=models/booknlp
CHARACTER_ANALYSIS_ENABLED=True

# Character Enhancement with Gemini AI
GEMINI_CHARACTER_ENHANCEMENT=True
GEMINI_ENHANCEMENT_THRESHOLD=0.3
GEMINI_RATE_LIMIT_DELAY=1

# =============================================================================
# CACHING AND STORAGE
# =============================================================================
CACHE_TTL=3600
MAX_CACHE_SIZE=1GB
ENABLE_PERSISTENT_CACHE=True

# File storage settings
MAX_UPLOAD_SIZE=50MB
ALLOWED_FILE_TYPES=txt,epub,pdf,docx

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/echotales.log
ENABLE_ERROR_TRACKING=True

# GPU settings
CUDA_ENABLED=True
MAX_GPU_MEMORY=4GB

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# MongoDB (if using instead of PostgreSQL)
MONGODB_URL=mongodb://localhost:27017/echotales

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=echotales-storage
AWS_REGION=us-east-1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
ENABLE_MOCK_APIS=False
MOCK_RESPONSE_DELAY=1
DEBUG_SQL=False
ENABLE_API_DOCS=True